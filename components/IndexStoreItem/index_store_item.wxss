/* components/IndexStoreItem/index_store_item.wxss */
.index_store_item {
  border-bottom:1rpx solid #F5F6F7;
  background-color: #fff;
  padding: 30rpx;
  display: flex;
}

.store_img {
  border-radius: 20rpx;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.store_content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content_top {
  display: flex;
}

.top_left {
  flex: 1;
  display: flex;
  align-items: center;
}

.store_state {
  border-radius: 5rpx;
  margin-right: 8rpx;
  background-color: #ff5858;
  width: 90rpx;
  text-align: center;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 22rpx;
  color: #fff;
}
.un_store_state{
  background-color: #C0C1C2;
}

.store_name {
  flex: 1;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.right_icon {
  transform: rotate(-90deg);
  width: 30rpx;
  height: 30rpx;
}

.top_right {
  width: 120rpx;
  text-align: end;
  font-size: 30rpx;
  color: #8a8a8a;
}

.content_center {
  display: flex;
  font-size: 26rpx;
  color: #8a8a8a;
}

.store_cate {
  margin-right: 20rpx;
}

.location_icon {
  width: 46rpx;
  height: 46rpx;
}

.location_text {
  flex: 1;
  font-size: 28rpx;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.navigation_icon {
  width: 36rpx;
  height: 36rpx;
}
