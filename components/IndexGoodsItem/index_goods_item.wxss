/* components/IndexGoodsItem/index_goods_item.wxss */
.index_goods_item{
  margin-bottom: 15rpx;
  border-radius: 25rpx;
  background-color: #fff;
  width: 353rpx;
}
.img_box{
  position: relative;
  width: 353rpx;
  height: 353rpx;
  overflow: hidden;
}
.goods_img{
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 25rpx;
  width: 100%;
  height: 100%;
}
.tag{
  background-color: #ff5858;
  position: absolute;
  top: 20rpx;
  left: -40rpx;
  height: 40rpx;
  line-height: 40rpx;
  width: 150rpx;
  text-align: center;
  color:#fff;
  font-size: 26rpx;
  transform: rotate(-45deg);
}
.model{
  background-color: rgba(130, 131, 132, 0.7);
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.model_button{
  border-radius: 10rpx;
  background-color: #828384;
  width: 150rpx;
  text-align: center;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 32rpx;
  color: #fff;
}
.goods_padding{
  padding: 0 10rpx 10rpx 10rpx;
}
.goods_name{
  margin-top: 18rpx;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
  color:#828384;
}
/* 拼团价格部分 */
.group_price_box{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.group_price_text{
  display: flex;
  align-items: flex-end;
  color:#ff5858;
}
.group_price_small{
  font-size: 26rpx;
}
.group_price_big{
  margin-left: 3rpx;
  position: relative;
  top: 7rpx;
  font-size: 42rpx;
}
.group_old_price{
  font-size: 24rpx;
  color:#8a8a8a;
}
.group_but{
  border-radius: 24rpx;
  background-color: #ff5858;
  width: 136rpx;
  text-align: center;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  color: #fff;
}
.un_group_but{
  background-color: #828384;
}
