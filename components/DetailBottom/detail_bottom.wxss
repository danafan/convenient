/* components/DetailBottom/detail_bottom.wxss */
.container{
  border-top:1rpx solid #F1F2F4;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  height: 96rpx;
  display: flex;
  align-items: center;
}
.route_box{
  flex:1;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.route_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.route_icon{
  width: 44rpx;
  height: 44rpx;
}
.route_text{
  font-size: 26rpx;
  color:#8a8a8a;
}
.button_box{
  margin-right: 25rpx;
  background-color: #E62932;
  border-radius: 38rpx;
  height: 76rpx;
  width: 350rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
}
