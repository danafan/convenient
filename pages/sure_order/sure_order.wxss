/* pages/sure_order/sure_order.wxss */
.sure_order_container{
  padding-bottom: 120rpx;
}
.distribution_box{
  background-color: #fff;
  height: 120rpx;
  display: flex;
  align-items: center;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.distribution_label{
  margin-right: 25rpx;
  font-size: 30rpx;
}
.distribution_item{
  margin-right: 15rpx;
  border:1rpx solid #8a8a8a;
  border-radius: 8rpx;
  width:130rpx;
  text-align: center;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 28rpx;
  color: #8a8a8a;
}
.active_distribution_item{
  border:1rpx solid #C91D38;
  color: #C91D38;
}
/* 地址信息 */
.address_box{
  margin-top: 15rpx;
  background-color: #fff;
}
/* 商家配送 */
.way_store{
  height: 200rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.location_icon{
  width: 38rpx;
  height: 38rpx;
}
.address_content{
  flex:1;
  font-size: 28rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.user_name{
  font-size: 30rpx;
}
.address_text{
  margin-top: 15rpx;
  
}
.line_clamp{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.down_icon{
  transform: rotate(-90deg);
}
/* 用户自提 */
.lift_item{
  height: 90rpx;
  font-size: 28rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.bottom_line_solid{
  border-bottom: 1rpx solid #F1F2F4;
}
.lift_left{
  display: flex;
  align-items: center;
}
.lift_label{
  color: #8a8a8a;
}
.down{
  margin-left: 8rpx;
  width: 30rpx;
  height: 30rpx;
}
.required{
  margin-right: 15rpx;
  color: #C91D38;
}
.phone{
  text-align: end;
}
/* 底部虚线 */
.line_item{
  background-color: #C91D38;
  width: 46rpx;
  height: 4rpx;
}
.ji_line_item{
  background-color: #2E81B2;
}
.display_style{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 购物清单 */
.listing_container{
  padding: 25rpx;
}
.listing_icon{
  margin: 15rpx;
  width: 32rpx;
  height: 32rpx;
}
.title_text{
  font-size: 30rpx;
}
/* .商品内容 */
.goods_container{
  margin-bottom: 25rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.goods_img{
  margin-right: 20rpx;
  border-radius: 10rpx;
  width: 200rpx;
  height: 200rpx;
}
.goods_content{
  flex: 1;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 28rpx;
}
.flex_start{
  align-items: flex-start;
}
.goods_num{
  margin-left: 20rpx;
}
.goods_price{
  display: flex;
  color: #C91D38;
}
.margin_lr{
  margin-left: 5rpx;
  margin-right: 5rpx;
}
.price_text{
  position: relative;
  bottom: 6rpx;
  font-size: 36rpx;
  font-weight: 600;
}
/* 留言 */
.remark_label{
  font-size: 28rpx;
  width: 200rpx;
  margin-right: 20rpx;
}
.remark_input{
  flex: 1;
  height: 120rpx;
  font-size: 28rpx;
}
/* 合计 */
.total_box{
  font-size: 28rpx;
  text-align: end;
}
.total_label{
  margin-left: 30rpx;
}
.color_price{
  color: #C91D38;
}
.total_price_text{
  font-size: 36rpx;
  font-weight: 600;
}
/* 下面的每一个菜单 */
.bottom_item{
  background-color: #fff;
  height: 90rpx;
  font-size: 28rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.margin_top{
  margin-top: 15rpx;
}
/* 底部按钮 */
.bottom_pay{
  border-top: 1rpx solid #F1F2F4;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  font-size: 30rpx;
}
.price_box{
  flex:1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 25rpx;
}
.pay_button{
  background-color: #DB252E;
  width: 240rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}