/* pages/store_detail/store_detail.wxss */
.store_detail_container{
  padding-bottom: 100rpx;
}
.store_info_box{
  background-color: #fff;
  height: 800rpx;
}
.swiper_box{
  width: 100%;
  height: 480rpx;
}
.store_info_show{
  border:1rpx solid #F1F2F4;
  border-radius: 10rpx;
  position: absolute;
  top: 380rpx;
  left: 50%;
  transform: translate(-50%);
  width: 700rpx;
  background-color: #fff;
  font-size: 28rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
}
.info_title{
  border-bottom:1rpx solid #F1F2F4;
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  text-align: center;
  font-size:34rpx;
}
.info_item{
  height: 72rpx;
}
.display_style{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.is_good{
  border-radius: 5rpx;
  background-color: #F9CB3A;
  text-align: center;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #fff;
}
.margin_right{
  margin-right: 10rpx;
  width: 32rpx;
  height:32rpx;
}
.store_name{
  
  font-size: 32rpx;
}
.store_button{
  border-radius: 5rpx;
  background-color: #E72932;
  width: 110rpx;
  text-align: center;
  height: 46rpx;
  line-height: 46rpx;
  color: #fff;
}
.title_list{
  margin-top: 15rpx;
  background-color: #fff;
}
.title_box{
  border-bottom: 1rpx solid #F1F2F4;
  display: flex;
  height: 72rpx;
  align-items: center;
  justify-content: space-between;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.title_box_left{
  font-size: 30rpx;
}
.goods_img{
  width: 100%;
}