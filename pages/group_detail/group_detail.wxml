<!--pages/group_detail/group_detail.wxml-->
<view class="group_detail_container">
  <view class="goods_group">
    <view class="goods_content">
      <image class="goods_img" mode="aspectFill" src="https://img.ivsky.com/img/tupian/t/202002/28/riben_meishi-001.jpg"></image>
      <view class="goods_container">
        <view class="goods_name">橘子橘子橘子</view>
        <view class="price_box">
          <view class="old_price">原价：¥32</view>
          <view class="new_price">
            <text class="small_text">拼团价 ¥</text>
            <text class="big_text">0</text>
            <view class="group_box">3人团</view>
          </view>
        </view>
      </view>
    </view>
    <view class="group_content">
      <view class="content_top">
        <view class="top_big">
          <text>还差</text>
          <text class="person_num">2</text>
          <text>人成团</text>
        </view>
        <view class="small_time">剩余 13：24：35 结束</view>
      </view>
      <view class="person_img_list">
        <view class="person_img_box">
          <image mode="aspectFill" class="person_img" src="https://img.ivsky.com/img/tupian/t/202002/28/riben_meishi-001.jpg"></image>
          <view class="tag">团长</view>
        </view>
        <view class="person_img_box">
          <image mode="aspectFill" class="person_img" src="https://img.ivsky.com/img/tupian/t/202002/28/riben_meishi-001.jpg"></image>
        </view>
        <view class="ren_null">
          <image class="ren_img" src="../../images/ren_icon.png"></image>
        </view>
      </view>
    </view>
  </view>
  <view class="common_row margin_top">
    <view class="row_label">惠东古交</view>
    <view class="right_arrow" bindtap="goStoreDetail">
      <text>进入店铺</text>
      <image class="right_icon" src="../../images/down_icon.png"></image>
    </view>
  </view>
  <view class="common_row margin_top">
    <view class="row_label">拼团说明</view>
    <view class="right_arrow">
      <text>查看更多</text>
      <image class="right_icon" src="../../images/down_icon.png"></image>
    </view>
  </view>
  <view class="common_row">
    <view class="desc_item_box">
      <image class="desc_icon" src="../../images/desc_icon_01.png"></image>
      <text>开团/参团</text>
    </view>
    <view class="desc_item_box">
      <image class="desc_icon" src="../../images/desc_icon_02.png"></image>
      <text>邀友参团</text>
    </view>
    <view class="desc_item_box">
      <image class="desc_icon" src="../../images/desc_icon_03.png"></image>
      <text>人满成团</text>
    </view>
    <view class="desc_item_box">
      <image class="desc_icon" src="../../images/desc_icon_04.png"></image>
      <text>抽奖</text>
    </view>
  </view>
  <view class="title_list">
    <view class="title_box">
      <view class="title_box_left">商品详情</view>
    </view>
    <view>
      <image class="goods_detail_img" mode="widthFix" src="https://img.ivsky.com/img/tupian/t/202002/28/riben_meishi-001.jpg">
      </image>
      <image class="goods_detail_img" mode="widthFix" src="https://scpic3.chinaz.net/Files/pic/pic9/202102/apic31073_s.jpg">
      </image>
      <image class="goods_detail_img" mode="widthFix" src="https://img.ivsky.com/img/tupian/t/202002/14/xican_meishi-001.jpg">
      </image>
    </view>
  </view>
  <!-- 底部按钮 -->
  <detail_bottom goods_type="{{goods_type}}" bind:onEmit="sharing"/>
</view>
