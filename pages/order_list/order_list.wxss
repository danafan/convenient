/* pages/order_list/order_list.wxss */
.top_tab{
  padding-top: 92rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}
.search_box{
  border-bottom: 1rpx solid #F1F2F4;
  background-color: #fff;
  display: flex;
  height: 90rpx;
  align-items: center;
  padding-left: 25rpx;
  padding-right:25rpx ;
}
.select_box{
  margin-right: 15rpx;
  min-width: 120rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.down_icon{
  margin-left: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.search_content{
  background-color: #F1F2F4;
  border-radius: 28rpx;
  border:1rpx solid #8a8a8a;
  flex:1;
  height: 56rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  padding-right:20rpx;
}
.search_icon{
  margin-right: 10rpx;
  width: 32rpx;
  height: 32rpx;
}
.search_input{
  flex:1;
  font-size: 28rpx;
}
.order_list{
  padding-top: 180rpx;
}
.select_modal{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  z-index: 1;
}
.select_content{
  border-top: 1rpx solid #F1F2F4;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 25rpx 25rpx 0 25rpx;
}
.select_item{
  margin-bottom: 25rpx;
  background-color: #F1F2F4;
  width: 220rpx;
  text-align: center;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 26rpx;
}
.modal_back{
  flex:1;
  background-color: rgba(0, 0, 0, 0.6);
}