/* pages/goods_detail/goods_detail.wxss */
.goods_detail_container{
  padding-bottom: 97rpx;
}
/* banner */
.banner_box{
  position: relative;
}
.swiper_box {
  height: 750rpx;
  padding: 15rpx;
}

.food_icon {
  border-radius: 10rpx;
  width: 100%;
  height: 720rpx;
}
.indicator_box{
  position: absolute;
  right: 30rpx;
  bottom: 60rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  width: 52rpx;
  text-align: center;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
}
/* 商品名称和价格 */
.goods_np{
  position: relative;
  top: -30rpx;
}
.common_back{
  background-color: #fff;
  padding: 30rpx 25rpx;
}
/* 商品名称 */
.goods_name_box{
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.goods_name{
  flex:1;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.time_box{
  margin-left: 20rpx;
  border-radius: 10rpx;
  background-color: #FBD63C;
  width: 206rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
/* 价格 */
.goods_price_box{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.group_goods{
  flex:1;
}
.group_goods_top{
  display: flex;
  align-items: flex-end;
}
.small_text{
  font-size: 26rpx;
  color: #8a8a8a;
}
.big_text{
  margin-right: 15rpx;
  position: relative;
  bottom: -5rpx;
  font-size: 42rpx;
}
.money_icon{
  color: #ff5858;
}
.old_price{
  margin-right: 15rpx;
  text-decoration:line-through;
}
.group_num{
  position: relative;
  bottom: 6rpx;
  border-radius: 5rpx;
  background-color: #FBEAE9;
  width: 90rpx;
  text-align: center;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 22rpx;
}
.group_goods_bottom{
  margin-top: 10rpx;
  display: flex;
}
.text_blod{
  margin-right: 15rpx;
  color: #333;
  font-weight: 600;
}
.num{
  margin-left: 5rpx;
  margin-right: 5rpx;
}
.share_box{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.share_icon{
  width: 46rpx;
  height: 46rpx;
}
/* 规格 */
.small_back{
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.small_back_label{
  margin-right: 20rpx;
  color:#8a8a8a;
}
.small_back_val{
  display: flex;
  align-items: center;
}
.pei_item{
  margin-right: 12rpx;
  display: flex;
  align-items: center;
}
.dui_icon{
  margin-right: 8rpx;
  width: 28rpx;
  height: 28rpx;
}
/* 规则说明 */
.desc_title{
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color:#8a8a8a;
}
.desc_item{
  margin-bottom: 10rpx;
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
}
.dian{
  position: relative;
  top:15rpx;
  margin-right: 8rpx;
  border-radius: 50%;
  background-color: #8a8a8a;
  width: 6rpx;
  height: 6rpx;
}
.desc_text{
  flex:1;
}
/* 参团和评价 */
.title_list{
  margin-top: 15rpx;
  background-color: #fff;
}
.title_box{
  border-bottom: 1rpx solid #F1F2F4;
  display: flex;
  height: 72rpx;
  align-items: center;
  justify-content: space-between;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.title_box_left{
  font-size: 30rpx;
}
.title_box_right{
  display: flex;
  align-items: center;
}
.down_icon{
  width: 28rpx;
  height: 28rpx;
  transform: rotate(-90deg);
}
/* 拼团列表轮播图 */
.group_item_box{
  height: 240rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.group_swiper_box{
  height: 240rpx;
}
/* 评论列表 */
.comment_list{
  padding-left: 25rpx;
  padding-right: 25rpx;
}
/* 详情图片 */
.goods_img{
  width: 100%;
}
/* 弹框 */
.modal_box{
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
}
.modal_content{
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background-color: #fff;
}
.content_box{
  padding: 25rpx;
}
.content_top{
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.goods_content{
  display: flex;
  align-items: center;
}
.goods_image{
  margin-right: 20rpx;
  border-radius: 8rpx;
  width: 180rpx;
  height: 180rpx;
}
.goods_info{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.goods_price_content{
  margin-bottom: 8rpx;
  height: 46rpx;
  display: flex;
  align-items: flex-end;
}
.big_price{
  position: relative;
  top: 5rpx;
  font-size: 38rpx;
  color: #DE425F;
  font-weight: 600;
}
.small_label{
  margin-left: 5rpx;
  margin-right: 5rpx;
  font-size: 26rpx;
  color: #DE425F;
}
.add_price{
  background-color: #DE425F;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  font-size: 26rpx;
  color: #fff;
}
.inventory{
  font-size: 26rpx;
  color: #8a8a8a;
}
.close_icon{
  width: 24rpx;
  height: 24rpx;
}
/* 购买数量 */
.number_box{
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.change_box{
  border:1rpx solid #F1F2F4;
  display: flex;
}
.change_but{
  background-color: #F1F2F4;
  width: 60rpx;
  text-align: center;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 30rpx;
}
.number_val{
  padding-left: 25rpx;
  padding-right: 25rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
}
.confirm_but{
  background-color: #E6303A;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color:#fff;
}