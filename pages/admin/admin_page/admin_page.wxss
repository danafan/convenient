/* pages/admin_page/admin_page.wxss */
page{
  background-color: #fff;
}
.top_content{
  background-color: #2071F4;
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
}
.content_item{
  width: 50%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.number_val{
  font-size: 68rpx;
  font-weight: 600;
}
.number_label{
  font-size: 32rpx;
}
.size_box{
  height: 30rpx;
  background-color: #F1F2F4;
}
.menu_list{
  display: flex;
  flex-wrap: wrap;
}
.menu_item{
  margin-top: 30rpx;
  width: 33%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  color: #8a8a8a;
}
.admin_icon{
  width: 48rpx;
  height: 48rpx;
}
.more_toast{
  color: #dcdcdc;
}
