/* pages/admin/admin_goods_list/admin_goods_list.wxss */
.amdin_goods_list{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.tab_list {
  border-bottom: 1rpx solid #F1F2F4;
  background: #fff;
  height: 80rpx;
  display: flex;
  justify-content:space-around;
}

.tab {
  height: 80rpx;
  width: 20%;
  font-size: 28rpx;
  color: #515253;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.active_color {
  color: #267EF4;
}

.active_tab {
  position: absolute;
  bottom: 0;
  background-color: #267EF4;
  width: 30%;
  height: 6rpx;
}
.goods_list{
  background-color: #fff;
  flex:1;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  overflow-y: scroll;
}
.goods_item{
  border-bottom: 1rpx solid #F3F3F3;
  height: 240rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.goods_img{
  margin-right: 15rpx;
  border-radius: 8rpx;
  width: 180rpx;
  height: 180rpx;
}
.goods_content{
  position: relative;
  flex:1;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  font-size: 28rpx;
}
.goods_name{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.goods_price{
  font-weight: 600;
}
.goods_tool{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #8a8a8a;
}
.more_icon{
  width: 40rpx;
  height: 40rpx;
}
.modal_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, .9);
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.modal_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.goods_set{
  margin-bottom: 10rpx;
  width: 52rpx;
  height: 52rpx;
}
