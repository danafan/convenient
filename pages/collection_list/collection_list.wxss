/* pages/collection_list/collection_list.wxss */
.tab_list {
  border-bottom: 1rpx solid #F1F2F4;
  background: #fff;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
}

.tab {
  height: 80rpx;
  width: 20%;
  font-size: 28rpx;
  color: #515253;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.active_color {
  color: #E5285F;
}

.active_tab {
  position: absolute;
  bottom: 0;
  background-color: #E5285F;
  width: 60%;
  height: 5rpx;
}

.order_list {
  padding-top: 90rpx;
}

.collection_item {
  border-bottom: 1rpx solid #F1F2F4;
  background-color: #fff;
  padding: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods_img {
  width: 150rpx;
  height: 150rpx;
}

.content_box {
  flex: 1;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.content_text {
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.collection_close_icon {
  width: 36rpx;
  height: 36rpx;
}
